@model RealEstateAgency.Models.Property

@{
    Layout = "_adminLayout";
}
<div class="center-form">
    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-6">
                Ідентифікатор:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyID)
            </dd>
            <dt class="col-sm-6">
                Тип нерухомості:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyType)
            </dd>
            <dt class="col-sm-6">
                Адреса:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            @if (!Model.IsForRent)
            {
                <dt class="col-sm-6">
                    Ціна:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price) грн.
                </dd>
            }
            else
            {
                <dt class="col-sm-6">
                    Ціна оренди:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RentPrice) грн/міс.
                </dd>
            }

            <dt class="col-sm-6">
                Кількість спалень:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumBedrooms)
            </dd>
            <dt class="col-sm-6">
                Кількість ванних кімнат:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumBathrooms)
            </dd>
            <dt class="col-sm-6">
                Загальна площа:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SquareFootage) кв.м.
            </dd>
            <dt class="col-sm-6">
                Створено:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-6">
                Шлях до зображень:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pictures)
            </dd>
            <dt class="col-sm-6">
                Статус:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
        <div class="w-100 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.PropertyID" class="btn btn-primary">Відредагувати</a>
            <a asp-action="Index" class="btn btn-secondary mt-3">Повернутись до списку</a>
        </div>
    </div>
</div>