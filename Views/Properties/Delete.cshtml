@model RealEstateAgency.Models.Property

@{
    Layout = "_adminLayout";
}
<h3 class="text-center">Ви впевнені, що хочете видалити цей об'єкт?'</h3>
<div class="center-form">
    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-2">
                Ідентифікатор нерухомості:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyID)
            </dd>
            <dt class="col-sm-2">
                Тип нерухомості:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyType)
            </dd>
            <dt class="col-sm-2">
                Адреса:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            @if (!Model.IsForRent)
            {
                <dt class="col-sm-2">
                    Ціна:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price) грн.
                </dd>
            }
            else
            {
                <dt class="col-sm-2">
                    Ціна оренди:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RentPrice) грн/міс.
                </dd>
            }

            <dt class="col-sm-2">
                Кількість спалень:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumBedrooms)
            </dd>
            <dt class="col-sm-2">
                Кількість ванних кімнат:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumBathrooms)
            </dd>
            <dt class="col-sm-2">
                Загальна площа:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SquareFootage) кв.м.
            </dd>
            <dt class="col-sm-2">
                Створено:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                Шлях до зображень:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pictures)
            </dd>
            <dt class="col-sm-2">
                Статус:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PropertyID" />
            <div class="w-100 text-center">
                <input type="submit" value="Видалити" class="btn btn-danger w-100" />
                <a asp-action="Index" class="btn btn-secondary mt-3">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>