@model RealEstateAgency.Models.Property

@{
    Layout = "_Layout";
    ViewData["Title"] = "Деталі";
}
<div>
    <h4>Property</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropertyType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsForRent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsForRent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumBedrooms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumBedrooms)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumBathrooms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumBathrooms)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SquareFootage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SquareFootage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pictures)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pictures)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <form asp-controller="CustomerRequests" asp-action="CreateFromProperty" method="post">
        <input type="hidden" name="PropertyID" value="@Model.PropertyID" />
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" name="Name" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input class="form-control" name="PhoneNumber" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" name="Email" />
        </div>
        <button type="submit" class="btn btn-primary">Отправить запрос</button>
    </form>
</div>