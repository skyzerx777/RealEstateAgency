@model RealEstateAgency.Models.Property

@{
    Layout = "_Layout";
    ViewData["Title"] = "Деталі";
}
<div>
    <dl class="row">
        <dt class="col-sm-6">
            Тип нерухомості:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropertyType)
        </dd>
        <dt class="col-sm-6">
            Адреса:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        @if (!Model.IsForRent)
        {
            <dt class="col-sm-6">
                Ціна:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price) грн.
            </dd>
        }
        else
        {
            <dt class="col-sm-6">
                Ціна оренди:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RentPrice) грн/міс.
            </dd>
        }

        <dt class="col-sm-6">
            Кількість спалень:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumBedrooms)
        </dd>
        <dt class="col-sm-6">
            Кількість ванних кімнат:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumBathrooms)
        </dd>
        <dt class="col-sm-6">
            Загальна площа:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SquareFootage) кв.м.
        </dd>
        <dt class="col-sm-6">
            Створено:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-6">
            Статус:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <form asp-controller="CustomerRequests" asp-action="CreateFromProperty" method="post">
        <input type="hidden" name="PropertyID" value="@Model.PropertyID" />
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" name="Name" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input class="form-control" name="PhoneNumber" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" name="Email" />
        </div>
        <button type="submit" class="btn btn-primary">Відправити запит</button>
    </form>
</div>