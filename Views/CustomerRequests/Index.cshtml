@model IEnumerable<RealEstateAgency.Models.CustomerRequest>

@{
    Layout = "_adminLayout";
    //TODO add filters and sorting
}

<body>
    <p>
        <a class="position-relative start-50 translate-middle text-decoration-none text-primary fs-3 fw-bold" asp-action="Create">Додати</a>
    </p>
    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Ім'я
                        </th>
                        <th>
                            Контактний телефон
                        </th>
                        <th>
                            Електронна пошта
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.RequestID">Змінити</a> |
                                <a asp-action="Details" asp-route-id="@item.RequestID">Деталі</a> |
                                <a asp-action="Delete" asp-route-id="@item.RequestID">Видалити</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>