@model RealEstateAgency.Models.CustomerRequest

@{
    Layout = "_adminLayout";
}
<h3 class="text-center">Ви впевнені, що хочете видалити цей запит?</h3>
<div class="center-form">
    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-2">
                Ідентифікатор запиту:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestID)
            </dd>
            <dt class="col-sm-2">
                Ідентифікатор нерухомості:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyID)
            </dd>
            <dt class="col-sm-2">
                Ім'я:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Контактний телефон:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                Електронна пошта
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RequestID" />
            <div class="w-100 text-center">
                <input type="submit" value="Видалити" class="btn btn-danger w-100" />
                <a asp-action="Index" class="btn btn-secondary mt-3">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>